{% extends "layout.twig" %}

{% block static %}
    <link rel="stylesheet" href="./static/css/index.css">
{% endblock %}

{% block content %}
    <div class="content">
        <div class="pure-g">
            <div class="pure-u-1-6"></div>

            <div class="pure-u-2-3">
                <form action="/search" method="GET" class="pure-form pure-form-stacked">
                    <fieldset>
                        <input id="text_input" type="text" placeholder="">
                        <button type="submit" class="pure-button submit-button">Search latest result in 2 hours</button>
                    </fieldset>
                </form>
            </div>

            <div class="pure-u-1-6"></div>
        </div>
    </div>
{% endblock %}

