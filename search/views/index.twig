{% extends "layout.twig" %}

{% block static %}
    <link rel="stylesheet" href="./static/css/index.css">
    <script type="text/javascript" src="./static/js/index.js" ></script>
    <script>
        function doSearch(keywords) {
            jQuery('input[name=search]').focus();
            jQuery('input[name=search]').val(keywords);
            //jQuery('.gsc-search-button').click();
        }
    </script>
{% endblock %}

{% block content %}
    <div class="content">
        <div class="logo">
            <img src="./static/images/logo.png">
        </div>
        
        <div class="pure-g">
            <div class="pure-u-1-10"></div>

            <div class="pure-u-4-5">
                <p class="pad-left-nm blue">
                    <span class="key-feature font-large">Instant</span><span class="key-feature-desc grey"> - latest result on the top,</span>
                    <span class="key-feature font-large"> Security</span><span class="key-feature-desc grey"> - no tracking or prompting.</span>
                    <span class="font-sm grey pad-left-nm">Extreme google search engine for you!</span>
                </p>
                <p class="pad-left-nm font-sm grey">22,000,000+ people are using it now!</p>

                <script>
                    (function() {
                        var cx = '007152500187517393596:a5pl-f__dfo';
                        var gcse = document.createElement('script');
                        gcse.type = 'text/javascript';
                        gcse.async = true;
                        gcse.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') +
                                '//www.google.com/cse/cse.js?cx=' + cx;
                        var s = document.getElementsByTagName('script')[0];
                        s.parentNode.insertBefore(gcse, s);
                    })();
                </script>
                <gcse:search></gcse:search>

                <div class="pure-g">
                    <div class="pure-u-1-4">
                        <p class="purple-grey marg-h-nm">Google Top Ten Search (Live):</p>
                        <div class="marg-h-sm">
                            {% for item in keywords %}
                                <div class="marg-sm">
                                <a class="pure-button blue bg-purple" href="javascript:void(0)" onclick="javascript:doSearch(this.innerText);">{{ item }}</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="pure-u-3-4">
                        <p class="purple-grey marg-h-nm">Top Ten World News (Live):</p>
                        <div class="marg-h-sm">
                            {% for item in news %}
                                <div class="marg-nm font-nm">
                                    <p><a class="blue news-index" href="{{ item['link'] }}" target="_blank"><span class="news-index marg-r-xsm">{{ item['index'] }}.</span>{{ item['headline'] }}</a></p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="pure-u-1-10"></div>
        </div>
    </div>
{% endblock %}

